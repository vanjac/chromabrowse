{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",      // remove for release
				"/EHsc",    // remove for release
				"/nologo",
				"/W4",
				"/Fe:",
				"${workspaceFolder}\\build\\out.exe",
				"/I",
				"${workspaceFolder}\\src",
				"${workspaceFolder}\\src\\*.cpp",
				"Shell32.lib",
				"Dwmapi.lib",
				"Gdi32.lib",
				"UxTheme.lib",
				"Comctl32.lib",
				"Msimg32.lib",
				"/link",
				"/incremental:no",
			],
			"options": {
				"cwd": "${workspaceFolder}\\build"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}