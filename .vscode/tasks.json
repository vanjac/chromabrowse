{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build resources",
			"command": "rc.exe",
			"args": [
				"/fo",
				"${workspaceFolder}\\build\\resource.res",
				"${workspaceFolder}\\res\\resource.rc",
			],
			"group": {
				"kind": "build",
			},
		},
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build application",
			"dependsOn": ["Build resources"],
			"command": "cl.exe",
			"args": [
				"/Zi",      // remove for release
				"/EHsc",    // remove for release
				"/nologo",
				"/W4",
				"/Fe:",
				"${workspaceFolder}\\build\\chromabrowse.exe",
				"/I",
				"${workspaceFolder}\\src",
				"${workspaceFolder}\\src\\*.cpp",
				"${workspaceFolder}\\build\\resource.res",
				"/link",
				"/incremental:no",
			],
			"options": {
				"cwd": "${workspaceFolder}\\build"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}