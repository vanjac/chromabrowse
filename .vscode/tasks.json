{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build resources",
			"command": "rc.exe",
			"args": [
				"/fo",
				"${workspaceFolder}\\build\\resource.res",
				"${workspaceFolder}\\src\\resource.rc",
			],
			"group": {
				"kind": "build",
			},
		},
		{
			"type": "cppbuild",
			"label": "Debug build",
			"dependsOn": ["Build resources"],
			"command": "cl.exe",
			"args": [
				"/Zi",      // debug only
				"/EHsc",    // debug only
				"/MTd",     // debug only
				"/D", "CHROMABROWSE_DEBUG", // debug only
				"/nologo",
				"/std:c++17",
				"/W4",
				"/Fe:",
				"${workspaceFolder}\\build\\chromabrowse.exe",
				"/I",
				"${workspaceFolder}\\src",
				"${workspaceFolder}\\src\\*.cpp",
				"${workspaceFolder}\\build\\resource.res",
				"/link",
				"/incremental:no",
				"/manifest:no",
				"/subsystem:console",   // debug only
			],
			"options": {
				"cwd": "${workspaceFolder}\\build"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"type": "cppbuild",
			"label": "Release build",
			"dependsOn": ["Build resources"],
			"command": "cl.exe",
			"args": [
				"/GL",      // release only
				"/O2",      // release only
				"/nologo",
				"/std:c++17",
				"/W4",
				"/Fe:",
				"${workspaceFolder}\\build\\chromabrowse.exe",
				"/I",
				"${workspaceFolder}\\src",
				"${workspaceFolder}\\src\\*.cpp",
				"${workspaceFolder}\\build\\resource.res",
				"/link",
				"/incremental:no",
				"/manifest:no",
			],
			"options": {
				"cwd": "${workspaceFolder}\\build"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
			},
		}
	]
}